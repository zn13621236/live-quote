<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
             xmlns:beans="http://www.springframework.org/schema/beans"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
                        http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-3.1.xsd">

    <http auto-config="true" use-expressions="true">
        <!-- Login pages -->
        <form-login login-page="/login" authentication-failure-url="/login-error" username-parameter="username"
                    password-parameter="password" authentication-success-handler-ref="authenticationSuccessHandler"/>
        <logout/>
        <!-- Security zones -->
        <intercept-url pattern="/secure/**" access="hasRole('ROLE_VENDOR')"/>
        <intercept-url pattern="/**" access="permitAll"/>

    </http>

    <authentication-manager>
        <authentication-provider ref="vendorAuthenticationProvider"/>
    </authentication-manager>

    <beans:bean id="passwordEncoder" class="org.springframework.security.authentication.encoding.ShaPasswordEncoder">
        <beans:constructor-arg value="512"/>
    </beans:bean>
        <beans:bean id="authenticationSuccessHandler" class="com.archer.livequote.web.interceptor.AuthenticationSuccessHandler">
        <beans:property name="defaultUrl" value="/company/" />
    </beans:bean>
    
    
</beans:beans>
